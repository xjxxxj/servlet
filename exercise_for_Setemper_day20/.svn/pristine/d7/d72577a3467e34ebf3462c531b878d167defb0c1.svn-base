package com.xjx.service;

import java.util.List;

import com.xjx.pojo.Customer;
import com.xjx.pojo.CustomerCondition;
import com.xjx.pojo.Page;

public interface CustomerService {

	/**
	 * 添加客户
	 * @param customer
	 */
	public void insertCustomer(Customer customer) ;
	/**
	 * 根据id删除客户
	 * @param id
	 */
	public void deleteCustomerById(Integer id) ;
	/**
	 * 根据id查找客户
	 * @param id
	 * @return
	 */
	public Customer findCustomerById(Integer id) ;
	/**
	 * 查找所有用户
	 * @return
	 */
	public List<Customer> findAllCustomer() ;
	/**
	 * 修改用户信息
	 * @param customer
	 */
	public void updateCustomer(Customer customer) ;
	/**
	 * 高级查询，根据用户的姓名，性别，年龄来查询用户
	 * @param condition
	 * @return
	 */
	public List<Customer> findListCustomer(CustomerCondition condition);
	/**
	 * 删除多个customer
	 * @param idList
	 */
	public void deleteCustomerList(List<Integer> idList);
	/**
	 * 分页查询
	 * @param page
	 * @return
	 */
	public List<Customer> queryCustomerListByPage(Page page);
	/*
	 * 条件+分页查询
	 */
	public List<Customer> findListCustomer(CustomerCondition condition, Page page);
	
}
